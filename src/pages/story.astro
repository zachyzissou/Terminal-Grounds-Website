<script>
// ==================== STORY PAGE INTERACTIVITY ====================

document.addEventListener('DOMContentLoaded', () => {
  // Tab Navigation System
  const tabButtons = document.querySelectorAll('[data-tab]');
  const contentSections = {
    'timeline': document.getElementById('timeline-content'),
    'season1': document.getElementById('season1-content'),
    'characters': document.getElementById('characters-content'),
    'glossary': document.getElementById('glossary-content')
  };

  // Set initial active tab
  let activeTab = 'timeline';
  
  function showSection(tabName) {
    // Hide all sections
    Object.values(contentSections).forEach(section => {
      if (section) section.style.display = 'none';
    });
    
    // Show selected section
    if (contentSections[tabName]) {
      contentSections[tabName].style.display = 'block';
    }
    
    // Update button states
    tabButtons.forEach(btn => {
      btn.classList.remove('active');
      if (btn.dataset.tab === tabName) {
        btn.classList.add('active');
      }
    });
    
    activeTab = tabName;
  }

  // Tab click handlers
  tabButtons.forEach(button => {
    button.addEventListener('click', () => {
      const tabName = button.dataset.tab;
      showSection(tabName);
      
      // Smooth scroll to content
      const targetSection = contentSections[tabName];
      if (targetSection) {
        targetSection.scrollIntoView({ 
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
    
    // Keyboard accessibility
    button.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        button.click();
      }
    });
  });

  // Initialize with timeline section
  showSection('timeline');

  // Timeline Event Interactions
  const timelineEvents = document.querySelectorAll('.timeline-event');
  
  timelineEvents.forEach((event, index) => {
    // Add entrance animation delay
    event.style.animationDelay = `${index * 0.1}s`;
    
    // Event hover interactions
    event.addEventListener('mouseenter', () => {
      event.style.transform = 'scale(1.02)';
      event.style.zIndex = '10';
    });
    
    event.addEventListener('mouseleave', () => {
      event.style.transform = 'scale(1)';
      event.style.zIndex = '1';
    });
  });

  // Character Card Interactions
  const characterCards = document.querySelectorAll('.character-card');
  
  characterCards.forEach(card => {
    card.addEventListener('mouseenter', () => {
      const factionClass = Array.from(card.classList).find(cls => cls.startsWith('faction-'));
      if (factionClass) {
        card.style.borderColor = getComputedStyle(card).getPropertyValue('--faction-primary');
      }
    });
    
    card.addEventListener('mouseleave', () => {
      card.style.borderColor = 'transparent';
    });
  });

  // Glossary Term Expansion
  const termEntries = document.querySelectorAll('.term-entry');
  
  termEntries.forEach(entry => {
    entry.addEventListener('click', () => {
      entry.classList.toggle('expanded');
      
      // Add visual feedback
      if (entry.classList.contains('expanded')) {
        entry.style.backgroundColor = 'rgba(0, 217, 255, 0.1)';
        entry.style.borderLeftColor = 'var(--bloom-accent)';
      } else {
        entry.style.backgroundColor = 'rgba(22, 26, 29, 0.5)';
        entry.style.borderLeftColor = 'var(--bloom-accent)';
      }
    });
  });

  // Archive Status Real-time Updates
  const statusItems = document.querySelectorAll('.status-item');
  
  // Simulate live data updates (in a real implementation, this would connect to actual data)
  function updateArchiveStatus() {
    statusItems.forEach((item, index) => {
      const value = item.querySelector('.bloom-mono:last-child');
      if (value) {
        // Add subtle animation to indicate live data
        value.style.opacity = '0.7';
        setTimeout(() => {
          value.style.opacity = '1';
        }, 200);
      }
    });
  }

  // Update every 30 seconds to simulate live archive
  setInterval(updateArchiveStatus, 30000);

  // Intersection Observer for Content Animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -100px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.opacity = '1';
        entry.target.style.transform = 'translateY(0)';
      }
    });
  }, observerOptions);

  // Observe timeline events and arc cards
  document.querySelectorAll('.timeline-event, .arc-card, .character-card').forEach(el => {
    el.style.opacity = '0';
    el.style.transform = 'translateY(20px)';
    el.style.transition = 'opacity 0.6s ease-out, transform 0.6s ease-out';
    observer.observe(el);
  });

  // Analytics tracking for story engagement
  function trackStoryInteraction(action, section) {
    console.log(`Story interaction: ${action} in ${section}`);
    // In a real implementation, this would send data to analytics
  }

  // Track tab usage
  tabButtons.forEach(button => {
    button.addEventListener('click', () => {
      trackStoryInteraction('tab_click', button.dataset.tab);
    });
  });

  // Track timeline event engagement
  timelineEvents.forEach((event, index) => {
    event.addEventListener('click', () => {
      trackStoryInteraction('timeline_event_click', event.dataset.year || `event_${index}`);
    });
  });
});

// Keyboard Navigation Enhancement
document.addEventListener('keydown', (e) => {
  // Arrow key navigation between tabs
  const currentTab = document.querySelector('.archive-section.active');
  const allTabs = Array.from(document.querySelectorAll('.archive-section'));
  const currentIndex = allTabs.indexOf(currentTab);
  
  if (e.key === 'ArrowRight' && currentIndex < allTabs.length - 1) {
    allTabs[currentIndex + 1].click();
  } else if (e.key === 'ArrowLeft' && currentIndex > 0) {
    allTabs[currentIndex - 1].click();
  }
});
