<BaseLayout 
    title="Concept Art & Assets - Bloom | AI-Generated Game Assets" 
    description="Explore Bloom's AI-generated concept art and game assets with 92% success rate. See environments, factions, UI elements, and renders created with breakthrough FLUX1-dev-fp8 pipeline."
    keywords="Bloom concept art, AI-generated game assets, FLUX1-dev-fp8, ComfyUI, game asset generation, Terminal Grounds art, 92% success rate, AAA quality assets"
    ogImage="/assets/images/environments/REFINE_SHARP_00003_1920w.png"
    type="website">
    
    <main class="concept-art-page">
        <ImmersiveGallery 
            title="Premium Concept Art & Assets"
            items={galleryItems}
        />

        
        <!-- Additional content sections can be added below the gallery -->
        <section class="glass-morphism-advanced p-8 mx-auto max-w-4xl mt-12 mb-12">
            <div class="text-center">
                <h2 class="holographic-text text-3xl font-display font-bold mb-4">The Breakthrough: 10% to 92%</h2>
                <p class="text-text-secondary mb-6">Revolutionary AI asset generation using PERFECT_PARAMS methodology</p>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                    <div class="text-center">
                        <div class="text-4xl font-black text-primary mb-2">92%</div>
                        <div class="text-text-muted text-sm">Success Rate</div>
                    </div>
                    <div class="text-center">
                        <div class="text-4xl font-black text-secondary mb-2">310s</div>
                        <div class="text-text-muted text-sm">Generation Time</div>
                    </div>
                    <div class="text-center">
                        <div class="text-4xl font-black text-accent-cyan mb-2">AAA</div>
                        <div class="text-text-muted text-sm">Quality Standard</div>
                    </div>
                    <div class="text-center">
                        <div class="text-4xl font-black text-accent-purple mb-2">FLUX1</div>
                        <div class="text-text-muted text-sm">AI Model</div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</BaseLayout>