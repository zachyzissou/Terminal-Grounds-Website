---
export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  keywords?: string;
  canonical?: string;
  noindex?: boolean;
  type?: 'website' | 'article' | 'game';
}

const { 
  title, 
  description = "Bloom is a tactical extraction FPS set in a quarantined city-zone reshaped by alien 'Monolith' phenomena. Scavenge. Extract. Breathe before the next bloom.", 
  ogImage = "/assets/images/environments/HQ_Metro_Maintenance_Corridor_Clean_SciFi_2560x1440_s30_cfg4.0_00001_1920w.png",
  keywords = "tactical extraction FPS, quarantined city, alien phenomena, Monolith, scavenging game, Terminal Grounds, faction warfare, reality distortion",
  canonical,
  noindex = false,
  type = 'website'
} = Astro.props;

const currentPath = Astro.url.pathname;
const siteUrl = "https://bloom.slurpgg.net";
const fullUrl = siteUrl + currentPath;
const fullOgImageUrl = ogImage.startsWith('http') ? ogImage : siteUrl + ogImage;

// Import Bloom identity system and global styles
import '../styles/bloom-identity.css';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Essential Meta Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    
    <!-- Title and SEO -->
    <title>{title}</title>
    <meta name="description" content={description}>
    <meta name="keywords" content={keywords}>
    <meta name="author" content="Terminal Grounds Development Team">
    <meta name="generator" content="Astro">
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonical || fullUrl}>
    
    <!-- Robots and Indexing -->
    {noindex && <meta name="robots" content="noindex, nofollow">}
    {!noindex && <meta name="robots" content="index, follow">}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type}>
    <meta property="og:url" content={fullUrl}>
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={fullOgImageUrl}>
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:site_name" content="Bloom - Terminal Grounds">
    <meta property="og:locale" content="en_US">
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content={fullUrl}>
    <meta name="twitter:title" content={title}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content={fullOgImageUrl}>
    <meta name="twitter:creator" content="@terminalgrounds">
    <meta name="twitter:site" content="@terminalgrounds">
    
    <!-- Game-specific Meta Tags -->
    <meta name="application-name" content="Bloom">
    <meta name="msapplication-TileColor" content="#000814">
    <meta name="msapplication-config" content="/browserconfig.xml">
    <meta name="theme-color" content="#00FF88">
    
    <!-- Additional SEO -->
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    
    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/images/logo.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/images/logo.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/logo.png">
    <link rel="manifest" href="/manifest.json">
    
    <!-- Preconnect for Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="dns-prefetch" href="//fonts.googleapis.com">
    
    <!-- Stylesheets -->
    <link rel="stylesheet" href="/assets/css/main.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Inter:wght@300;400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    
    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "VideoGame",
      "name": "Bloom",
      "description": "A tactical extraction FPS set in a quarantined city-zone reshaped by alien 'Monolith' phenomena. Navigate faction warfare, scavenge artifacts, and extract before reality itself turns against you.",
      "genre": ["Action", "First-Person Shooter", "Extraction", "Tactical"],
      "gamePlatform": ["PC", "Steam"],
      "operatingSystem": "Windows",
      "applicationCategory": "Game",
      "offers": {
        "@type": "Offer",
        "availability": "https://schema.org/ComingSoon",
        "priceCurrency": "USD"
      },
      "developer": {
        "@type": "Organization",
        "name": "Terminal Grounds Development Team"
      },
      "publisher": {
        "@type": "Organization", 
        "name": "Terminal Grounds"
      },
      "inLanguage": "en-US",
      "url": "https://bloom.slurpgg.net",
      "image": "https://bloom.slurpgg.net/assets/images/environments/HQ_Metro_Maintenance_Corridor_Clean_SciFi_2560x1440_s30_cfg4.0_00001_1920w.png",
      "releaseDate": "2027-Q1",
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.8",
        "reviewCount": "1",
        "bestRating": "5",
        "worstRating": "1"
      }
    }
    </script>
</head>
<body class="bg-void text-bloom-text-primary bloom-body">
    <a class="skip-link sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 z-50 px-4 py-2 bg-primary text-bg-primary rounded" href="#main">Skip to main content</a>
    <nav class="bloom-nav fixed top-0 w-full bg-shadow/95 backdrop-blur-xl border-b border-bloom-interface z-50" role="navigation" aria-label="Main navigation">
        <div class="nav-container max-w-6xl mx-auto px-6 py-4 flex justify-between items-center">
            <div class="nav-brand">
                <h1 class="bloom-display text-xl text-cascade">Bloom</h1>
                <span class="tagline bloom-mono text-xs text-bloom-text-muted uppercase tracking-wider" aria-label="Game tagline">Tactical Extraction 2161</span>
            </div>
            <ul class="nav-menu hidden md:flex gap-8" role="menubar">
                <li role="none"><a href="/" class={`nav-link bloom-interface text-bloom-text-secondary hover:text-cascade transition-colors duration-300 ${currentPath === '/' ? 'text-cascade font-semibold' : ''}`} role="menuitem" aria-current={currentPath === '/' ? 'page' : undefined}>IEZ Entry</a></li>
                <li role="none"><a href="/story" class={`nav-link bloom-interface text-bloom-text-secondary hover:text-cascade transition-colors duration-300 ${currentPath === '/story' || currentPath === '/story/' ? 'text-cascade font-semibold' : ''}`} role="menuitem" aria-current={currentPath === '/story' || currentPath === '/story/' ? 'page' : undefined}>The Cascade</a></li>
                <li role="none"><a href="/factions" class={`nav-link bloom-interface text-bloom-text-secondary hover:text-cascade transition-colors duration-300 ${currentPath === '/factions' || currentPath === '/factions/' ? 'text-cascade font-semibold' : ''}`} role="menuitem" aria-current={currentPath === '/factions' || currentPath === '/factions/' ? 'page' : undefined}>Factions</a></li>
                <li role="none"><a href="/regions" class={`nav-link bloom-interface text-bloom-text-secondary hover:text-cascade transition-colors duration-300 ${currentPath === '/regions' || currentPath === '/regions/' ? 'text-cascade font-semibold' : ''}`} role="menuitem" aria-current={currentPath === '/regions' || currentPath === '/regions/' ? 'page' : undefined}>Territories</a></li>
                <li role="none"><a href="/concept-art" class={`nav-link bloom-interface text-bloom-text-secondary hover:text-cascade transition-colors duration-300 ${currentPath === '/concept-art' || currentPath === '/concept-art/' ? 'text-cascade font-semibold' : ''}`} role="menuitem" aria-current={currentPath === '/concept-art' || currentPath === '/concept-art/' ? 'page' : undefined}>Intel</a></li>
                <li role="none"><a href="/progress" class={`nav-link bloom-interface text-bloom-text-secondary hover:text-cascade transition-colors duration-300 ${currentPath === '/progress' || currentPath === '/progress/' ? 'text-cascade font-semibold' : ''}`} role="menuitem" aria-current={currentPath === '/progress' || currentPath === '/progress/' ? 'page' : undefined}>Status</a></li>
            </ul>
            <button class="hamburger md:hidden flex flex-col gap-1 p-2" aria-label="Toggle navigation menu" aria-expanded="false" aria-controls="mobile-menu">
                <span class="w-6 h-0.5 bg-text-primary transition-all duration-300" aria-hidden="true"></span>
                <span class="w-6 h-0.5 bg-text-primary transition-all duration-300" aria-hidden="true"></span>
                <span class="w-6 h-0.5 bg-text-primary transition-all duration-300" aria-hidden="true"></span>
            </button>
        </div>
    </nav>

    <main id="main">
        <slot />
    </main>

    <footer class="bloom-footer bg-shadow border-t border-bloom-interface">
        <div class="container max-w-6xl mx-auto px-6 py-12">
            <div class="footer-content grid md:grid-cols-4 gap-8">
                <div class="footer-brand">
                    <h3 class="bloom-display text-lg text-cascade mb-4">Bloom</h3>
                    <p class="bloom-body text-bloom-text-secondary mb-4">Extract, or it never happened.</p>
                    <div class="status-badge inline-flex items-center gap-2 px-3 py-1 bg-bloom-interface/20 border border-bloom-accent/30 rounded">
                        <div class="w-2 h-2 bg-bloom-accent rounded-full animate-pulse"></div>
                        <span class="bloom-mono text-xs text-bloom-accent">IEZ STATUS: ACTIVE</span>
                    </div>
                </div>
                <div class="footer-section">
                    <h4 class="bloom-interface text-bloom-text-primary mb-4">The IEZ</h4>
                    <ul class="space-y-2">
                        <li><a href="/story" class="bloom-body text-bloom-text-secondary hover:text-cascade transition-colors">The Cascade</a></li>
                        <li><a href="/factions" class="bloom-body text-bloom-text-secondary hover:text-cascade transition-colors">Seven Factions</a></li>
                        <li><a href="/regions" class="bloom-body text-bloom-text-secondary hover:text-cascade transition-colors">Territories</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4 class="bloom-interface text-bloom-text-primary mb-4">Intel</h4>
                    <ul class="space-y-2">
                        <li><a href="/concept-art" class="bloom-body text-bloom-text-secondary hover:text-cascade transition-colors">Visual Archive</a></li>
                        <li><a href="/progress" class="bloom-body text-bloom-text-secondary hover:text-cascade transition-colors">Operation Status</a></li>
                        <li><a href="/milestones" class="bloom-body text-bloom-text-secondary hover:text-cascade transition-colors">Mission Objectives</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4 class="bloom-interface text-bloom-text-primary mb-4">Extraction</h4>
                    <ul class="space-y-2">
                        <li><a href="https://store.steampowered.com/app/[STEAM_ID]" class="bloom-body text-bloom-text-secondary hover:text-cascade transition-colors">Steam Wishlist</a></li>
                        <li><a href="#newsletter" class="bloom-body text-bloom-text-secondary hover:text-cascade transition-colors">Intel Network</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom border-t border-bloom-interface/30 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
                <p class="bloom-mono text-bloom-text-muted text-sm">&copy; <span id="current-year"></span> Terminal Grounds. All assets classified.</p>
                <p class="bloom-mono text-bloom-text-muted text-sm">AAA-Quality AI Asset Generation</p>
            </div>
        </div>
    </footer>

    <script is:inline src="/assets/js/main.js"></script>
    <script is:inline src="/assets/js/webgl-effects.js"></script>
</body>
</html>