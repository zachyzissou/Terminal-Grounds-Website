<?xml version="1.0"?>
<Container version="2">
  <Name>Terminal-Grounds-Website</Name>
  <Repository>terminal-grounds-website</Repository>
  <Registry>https://github.com/zachgentner/Terminal-Grounds-Website</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/zachgentner/Terminal-Grounds-Website/issues</Support>
  <Project>https://github.com/zachgentner/Terminal-Grounds-Website</Project>
  <Overview>
    Terminal Grounds Website - Auto-updating static site with GitHub integration.
    
    This container automatically pulls the latest website changes from GitHub on startup,
    runs the asset pipeline to sync game assets, and serves the site with nginx.
    
    Features:
    • Automatic GitHub repository pulling on container restart
    • Asset pipeline integration with Terminal-Grounds repository  
    • WebGL atmospheric effects and interactive galleries
    • Health check monitoring
    • Production-ready nginx configuration
    
    To update the website: simply restart/recreate the container and it will pull the latest changes automatically.
  </Overview>
  <Category>HomeServer:</Category>
  <WebUI>http://[IP]:[PORT:2161]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/zachgentner/Terminal-Grounds-Website/main/unraid-template.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/zachgentner/Terminal-Grounds-Website/main/site/assets/images/favicon.svg</Icon>
  <ExtraParams>--health-cmd="wget -qO- http://127.0.0.1/health || exit 1" --health-interval=30s --health-timeout=5s --health-retries=3</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled></DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="WebUI Port" Target="80" Default="2161" Mode="tcp" Description="Port for accessing the Terminal Grounds website" Type="Port" Display="always" Required="true" Mask="false">2161</Config>
  <Config Name="Container Path - Logs" Target="/var/log/nginx" Default="/mnt/user/appdata/terminal-grounds-website/logs" Mode="rw" Description="Nginx log files (optional)" Type="Path" Display="advanced" Required="false" Mask="false">/mnt/user/appdata/terminal-grounds-website/logs</Config>
  <Config Name="Timezone" Target="TZ" Default="America/New_York" Mode="" Description="Container timezone" Type="Variable" Display="always" Required="false" Mask="false">America/New_York</Config>
  <Config Name="Domain" Target="DOMAIN" Default="terminal-grounds.local" Mode="" Description="Domain for reverse proxy (optional)" Type="Variable" Display="advanced" Required="false" Mask="false">terminal-grounds.local</Config>
</Container>